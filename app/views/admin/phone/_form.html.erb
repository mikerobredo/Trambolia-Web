<% if @phone.errors.any? %>
  <div id="errorExplanation">
  <h2><%= pluralize(@phone.errors.count, "error") %> prohibited this phone from being saved:</h2>
    <ul>
      <% @phone.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <p><label for="phone_title">Modelo</label><br/>
  <%= text_field 'phone', 'title' %></p>
</div>

<div class="field">
  <p><label for="phone_manufacturer">Fabricante</label><br/>
  <%= collection_select :phone, :manufacturer_id, @manufacturers, :id, :name %></p>
</div>
  
<div class="field">
  <p><label for="phone[supplier_ids][]">Proveedores</label><br/>
  <%= select_tag 'phone[supplier_ids][]', options_from_collection_for_select(@suppliers, :id, :name, 
      @phone.suppliers.collect{|supplier| supplier.id}), { :multiple => true, :size => 5 } %></p>
</div>

<div class="field"><p>
  <label for="phone_manufactured_at">Fabricado el</label><br/>
  <%= datetime_select 'phone', 'manufactured_at' %></p>
</div>

<div class="field">
  <p><label for="phone_imei">Imei</label><br/>
  <%= text_field 'phone', 'imei' %></p>
</div>

<div class="field">
  <p><label for="phone_blurb">Descripción</label><br/>
  <%= text_area 'phone', 'blurb' %></p>
</div>


<div class="field">
  <p><label for="phone_price">Precio</label><br/>
  <%= text_field 'phone', 'price' %></p>
</div>

<div class="field">
  <% if @phone.cover_image.exists? then %>
    <dd><%= image_tag @phone.cover_image.url %></dd>
  <% else %>
    <p> No hay imágen adjunta. Por favor suba una. </p>
  <% end %>
  <p><label for="phone_cover_image">Imagen</label><br/>
  <%= file_field 'phone', :cover_image %></p>
</div>
<dl>
  <dt>Nombre</dt>
  <dd><%= @user.name %></dd>

  <dt>Usuario</dt>
  <dd><%= @user.login %></dd>

  <dt>E-mail</dt>
  <dd><%= @user.email %></dd>

  <dt>Inicios de sesión</dt>
  <dd><%= @user.login_count %></dd>
 
  <dt>Última solicitud el</dt>
  <dd><%= @user.last_request_at %></dd>

  <% if @user.last_login_at %>
    <dt>Último inicio de sesión el</dt>
    <dd><%= @user.last_login_at %></dd>
  <% end %>

  <dt>Inicio de sesión actual</dt>
  <dd><%= @user.current_login_at %></dd>

  <% if @user.last_login_ip %>
    <dt>Última IP de inicio de sesión</dt>
    <dd><%= @user.last_login_ip %></dd>
  <% end %>

  <dt>IP de inicio de sesión actual</dt>
  <dd><%= @user.current_login_ip %></dd>
</dl>

<%= link_to 'Editar', :action => 'edit' %>
